datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TwoFa {
  code       String?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  isVerified Boolean?
  updatedAt  DateTime @updatedAt
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  twoFas    TwoFa[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}
